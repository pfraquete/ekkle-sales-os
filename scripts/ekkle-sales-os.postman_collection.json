{
  "info": {
    "name": "EKKLE SALES OS API",
    "description": "Collection para testar a API do EKKLE SALES OS",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "webhookSecret",
      "value": "your-webhook-secret",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Detailed Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/detailed",
              "host": ["{{baseUrl}}"],
              "path": ["health", "detailed"]
            }
          }
        },
        {
          "name": "Readiness Probe",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/ready",
              "host": ["{{baseUrl}}"],
              "path": ["health", "ready"]
            }
          }
        },
        {
          "name": "Liveness Probe",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/live",
              "host": ["{{baseUrl}}"],
              "path": ["health", "live"]
            }
          }
        }
      ]
    },
    {
      "name": "Leads",
      "item": [
        {
          "name": "List Leads",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["leads"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "new",
                  "disabled": true
                },
                {
                  "key": "temperature",
                  "value": "hot",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "João",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Lead by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads/:id",
              "host": ["{{baseUrl}}"],
              "path": ["leads", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "lead-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Create Lead",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"5511999999999\",\n  \"name\": \"Pastor Teste\",\n  \"church_name\": \"Igreja Teste\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/leads",
              "host": ["{{baseUrl}}"],
              "path": ["leads"]
            }
          }
        },
        {
          "name": "Update Lead",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"contacted\",\n  \"temperature\": \"warm\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/leads/:id",
              "host": ["{{baseUrl}}"],
              "path": ["leads", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "lead-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Get Lead Conversations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/leads/:id/conversations",
              "host": ["{{baseUrl}}"],
              "path": ["leads", ":id", "conversations"],
              "variable": [
                {
                  "key": "id",
                  "value": "lead-uuid-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Webhook",
      "item": [
        {
          "name": "WhatsApp Webhook (Simulated)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Webhook-Secret",
                "value": "{{webhookSecret}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"messages.upsert\",\n  \"instance\": \"ekkle-sales\",\n  \"data\": {\n    \"key\": {\n      \"remoteJid\": \"5511999999999@s.whatsapp.net\",\n      \"fromMe\": false,\n      \"id\": \"MSG_TEST_001\"\n    },\n    \"message\": {\n      \"conversation\": \"Olá, gostaria de saber mais sobre o sistema\"\n    },\n    \"messageTimestamp\": 1704067200,\n    \"pushName\": \"Pastor Teste\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/webhook/whatsapp",
              "host": ["{{baseUrl}}"],
              "path": ["webhook", "whatsapp"]
            }
          }
        },
        {
          "name": "WhatsApp Webhook Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/webhook/whatsapp",
              "host": ["{{baseUrl}}"],
              "path": ["webhook", "whatsapp"]
            }
          }
        }
      ]
    },
    {
      "name": "Stats",
      "item": [
        {
          "name": "Queue Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/stats/queue",
              "host": ["{{baseUrl}}"],
              "path": ["stats", "queue"]
            }
          }
        }
      ]
    },
    {
      "name": "Root",
      "item": [
        {
          "name": "API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          }
        }
      ]
    }
  ]
}
