{
  "name": "ekkle-sales-os",
  "version": "1.0.0",
  "description": "EKKLE SALES OS - Sistema de vendas B2B para igrejas com WhatsApp automation",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:api": "bun run --watch src/api/server.ts",
    "dev:worker": "bun run --watch src/workers/index.ts",
    "start": "bun run src/index.ts",
    "start:api": "bun run src/api/server.ts",
    "start:worker": "bun run src/workers/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "build:api": "bun build src/api/server.ts --outdir ./dist/api --target bun",
    "build:worker": "bun build src/workers/index.ts --outdir ./dist/worker --target bun",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "bun test",
    "test:db": "bun run scripts/test-db.ts",
    "security:check": "bun run scripts/security-check.ts",
    "migrate": "bun run scripts/migrate.ts",
    "seed": "bun run scripts/seeds.ts",
    "db:setup": "bun run migrate && bun run seed"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/swagger": "^1.1.0",
    "@supabase/supabase-js": "^2.45.0",
    "bullmq": "^5.12.0",
    "elysia": "^1.1.0",
    "ioredis": "^5.4.1",
    "openai": "^4.56.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "license": "MIT"
}
